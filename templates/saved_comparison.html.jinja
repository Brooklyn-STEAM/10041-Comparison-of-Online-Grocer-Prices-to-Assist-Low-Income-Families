<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{product['item_name']}} - CheapCarts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="icon" href="/static/other_images/CheapCartsLogo.png">
    <link rel="stylesheet" href="/static/styles.css">
  </head>
  <body>
    {% include "components/navbar.html.jinja"%}

    <a href="/leftovers" class="back-products fs-5 btn m-3 text-black">
        <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="20" height="20">
            <path d="M1.5 7.5l4-4m-4 4l4 4m-4-4H14" stroke="currentColor"></path>
        </svg> Back to Leftovers</a>

    <main class="container mx-auto my-4">
        <section class="row">
            <div class="card mb-3 mx-auto w-100">
                <div class="card-body row">
                    <div class="col">
                        <h5 class="card-title text-start fs-1">{{product['item_name']}}</h5>
                        {%if not current_user.is_authenticated%}
                            <a href="/login" class="save-btn btn btn-danger d-inline-block float-start">
                                <span class="save-label me-1">Save</span>
                                <span class="save-heart"><svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="20" height="20"><path d="M7.5 13.5l-.354.354a.5.5 0 00.708 0L7.5 13.5zM1.536 7.536l-.354.353.354-.353zm5-5l-.354.353.354-.353zM7.5 3.5l-.354.354a.5.5 0 00.708 0L7.5 3.5zm.964-.964l-.353-.354.353.354zm-.61 10.61L1.889 7.182l-.707.707 5.964 5.965.708-.708zm5.257-5.964l-5.965 5.964.708.708 5.964-5.965-.707-.707zM6.182 2.889l.964.965.708-.708-.965-.964-.707.707zm1.672.965l.964-.965-.707-.707-.965.964.708.708zM10.964 1c-1.07 0-2.096.425-2.853 1.182l.707.707A3.037 3.037 0 0110.964 2V1zM14 5.036c0 .805-.32 1.577-.89 2.146l.708.707A4.036 4.036 0 0015 5.036h-1zm1 0A4.036 4.036 0 0010.964 1v1A3.036 3.036 0 0114 5.036h1zM4.036 2c.805 0 1.577.32 2.146.89l.707-.708A4.036 4.036 0 004.036 1v1zM1 5.036A3.036 3.036 0 014.036 2V1A4.036 4.036 0 000 5.036h1zm.89 2.146A3.035 3.035 0 011 5.036H0c0 1.07.425 2.096 1.182 2.853l.707-.707z" fill="currentColor"></path></svg></span>
                            </a>
                        {%else%}    
                            {%if product['user_id'] == None%}
                                <form  action="/leftovers/{{product['id']}}/save" method="post">
                                    <button type="submit" class="save-btn btn btn-danger d-inline-block float-start">
                                        <span class="save-label me-1">Save</span>
                                        <span class="save-heart"><svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="20" height="20"><path d="M7.5 13.5l-.354.354a.5.5 0 00.708 0L7.5 13.5zM1.536 7.536l-.354.353.354-.353zm5-5l-.354.353.354-.353zM7.5 3.5l-.354.354a.5.5 0 00.708 0L7.5 3.5zm.964-.964l-.353-.354.353.354zm-.61 10.61L1.889 7.182l-.707.707 5.964 5.965.708-.708zm5.257-5.964l-5.965 5.964.708.708 5.964-5.965-.707-.707zM6.182 2.889l.964.965.708-.708-.965-.964-.707.707zm1.672.965l.964-.965-.707-.707-.965.964.708.708zM10.964 1c-1.07 0-2.096.425-2.853 1.182l.707.707A3.037 3.037 0 0110.964 2V1zM14 5.036c0 .805-.32 1.577-.89 2.146l.708.707A4.036 4.036 0 0015 5.036h-1zm1 0A4.036 4.036 0 0010.964 1v1A3.036 3.036 0 0114 5.036h1zM4.036 2c.805 0 1.577.32 2.146.89l.707-.708A4.036 4.036 0 004.036 1v1zM1 5.036A3.036 3.036 0 014.036 2V1A4.036 4.036 0 000 5.036h1zm.89 2.146A3.035 3.035 0 011 5.036H0c0 1.07.425 2.096 1.182 2.853l.707-.707z" fill="currentColor"></path></svg></span>
                                    </button>
                                </form>
                            {%else%}
                                <form action="/leftovers/{{product['id']}}/unsave" method="post">
                                    <button type="submit" class="product-btn save-btn saved-btn btn btn-white d-inline-block border-black my-2 float-start">
                                        <span>Saved</span>
                                        <span><svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="20" height="20"><path d="M7.5 13.5l-.354.354a.5.5 0 00.708 0L7.5 13.5zM1.536 7.536l-.354.353.354-.353zm5-5l-.354.353.354-.353zM7.5 3.5l-.354.354a.5.5 0 00.708 0L7.5 3.5zm.964-.964l-.353-.354.353.354zm-.61 10.61L1.889 7.182l-.707.707 5.964 5.965.708-.708zm5.257-5.964l-5.965 5.964.708.708 5.964-5.965-.707-.707zM6.182 2.889l.964.965.708-.708-.965-.964-.707.707zm1.672.965l.964-.965-.707-.707-.965.964.708.708zM10.964 1c-1.07 0-2.096.425-2.853 1.182l.707.707A3.037 3.037 0 0110.964 2V1zM14 5.036c0 .805-.32 1.577-.89 2.146l.708.707A4.036 4.036 0 0015 5.036h-1zm1 0A4.036 4.036 0 0010.964 1v1A3.036 3.036 0 0114 5.036h1zM4.036 2c.805 0 1.577.32 2.146.89l.707-.708A4.036 4.036 0 004.036 1v1zM1 5.036A3.036 3.036 0 014.036 2V1A4.036 4.036 0 000 5.036h1zm.89 2.146A3.035 3.035 0 011 5.036H0c0 1.07.425 2.096 1.182 2.853l.707-.707z" fill="currentColor"></path></svg></span>
                                    </button>
                                </form>
                            {%endif%}
                        {%endif%}
                    </div>
                    <div class="col">
                        <img src="{{product['item_image']}}" width="150px" class="mh-100 float-end img-fluid rounded-start" alt="Image of {{product['item_name']}}">
                    </div>
                </div>
            </div>
        </section>

        <section class="mx-auto">
            <div class="row mx-auto">
                {%for company in comp_products%}
                    <div class="col col-12-sm p-0">
                        <div class="mx-auto compare-card card text-center p-0 mb-2 me-2 h-100">
                            <a href="{{company['root_link']}}{{product['item_name']}}" target="_blank" class="text-black link-underline link-underline-opacity-0 h-100">
                                <div class="card-body h-100 d-flex flex-column">
                                    <h3 class="card-title text-center mt-2">{{company['company_name']}}</h3>
                                    <div id="saved-rule"></div>
                                    
                                    <div class="flex-grow-1"></div>

                                    <p class="card-title text-center mt-3 fs-5">{{company['product_name']}}</p>

                                    <div class="flex-grow-1"></div>

                                    <p class="fs-3 mt-5 text-center">${{"%.2f" | format(company['product_price'])}}</p>

                                    <div id="saved-rule" class="bottom-0"></div>
                                </div> 
                            </a>
                            </div>
                        </div>
                    {%endfor%}
              
            </div>
        </section>

    </main>




    {% include "components/footer.html.jinja"%}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>