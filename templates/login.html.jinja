<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Log In - Cheap Carts</title>
        <link rel="icon" href="/static/other_images/temp-logo.png">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="/static/styles.css">
        <script src="/static/styles.js"></script>
    </head>

    <body>
        {% include "components/navbar.html.jinja" %}
        <div class="container mt-5 mx-auto">
            <div class="row justify-content-center">
                <div class="card w-50 shadow-lg rounded-5 mb-5">
                    <div class="col-8 mx-auto">
                        <h1 class="text-center text-HunterGreen mt-4">Log In</h1>
                        <hr class="mx-auto mb-4">

                        {%for message in get_flashed_messages()%}
                            <div class="alert alert-danger" role="alert">
                                {{message}}
                            </div>
                        {%endfor%}

                        <form method="post">
                            <div class="mb-3">
                                <label for="username" class="form-label text-HunterGreen mb-1">Username</label>
                                <input type="text" class="form-control mb-4" id="username" name="userVer" required value="{{request.form.get('userVer', '')}}" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label text-HunterGreen mb-1">Password</label>
                                <input type="password" class="form-control mb-4" id="password" name="passVer" required>
                            </div>
                            <button type="submit" class="btn tertiaryColor text-Black">Log In</button>
                        </form>
                        <hr class="mx-auto mb-4">
                        <p class="mt-3 text-HunterGreen mb-5">Don't have an account? <a href="/register">Sign Up</a></p>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>