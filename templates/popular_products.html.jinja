      <button id="product-search" class="btn secondaryColor" type="submit">Search</button>
    </form>

    <!-- Search Results -->
    {%if search_products | length == 0 and request.args.get('query')%}
    <h2>'{{request.args.get('query')}}' Not Found</h2>
    <hr class="product-rule">
    {%elif search_products | length > 0%}
    <h2>Search Results for '{{request.args.get('query')}}'</h2>
    {%if search_products | length == 1%}
    <h4 class="text-secondary">{{search_products | length}} Result Found</h4>
    {%else%}
