<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign Up - Cheap Carts</title>
    <link rel="icon" href="/static/other_images/CheapCartsLogo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/styles.css">
    <script src="/static/styles.js"></script>
</head>

<body>
    {% include "components/navbar.html.jinja" %}
    <div class="container mt-5 mx-auto">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 card shadow-lg rounded-5 mb-5 mx-auto">
                <h1 class="text-center text-HunterGreen mt-4 border-bottom pb-4">Sign Up</h1>
                <hr class="mx-auto mb-4">

                {% for message in get_flashed_messages() %}
                <div class="alert alert-danger" role="alert">
                    {{ message }}
                </div>
                {% endfor %}

                <form action="/register" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label text-HunterGreen mb-1">Username</label>
                        <input type="text" class="text-box form-control mb-4" id="username" name="username" required
                            value="{{request.form.get('username', '')}}" required>
                    </div>
                    <div class="mb-3">
                        <label for="zip" class="form-label text-HunterGreen mb-1">Zipcode</label>
                        <input type="text" class="text-box form-control mb-4" id="zip" name="zipcode" required
                            value="{{request.form.get('zipcode', '')}}" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label text-HunterGreen mb-1">Password</label>
                        <input type="password" class="text-box form-control mb-4" id="password" name="password"
                            required>
                    </div>
                    <div class="mb-3">
                        <label for="confirm_password" class="form-label text-HunterGreen mb-1">Confirm Password</label>
                        <input type="password" class="text-box form-control mb-4" id="confirm_password"
                            name="confirm_password" required>
                    </div>
                    <button type="submit" class="btn tertiaryColor text-Black">Sign Up</button>
                </form>
                <hr class="mx-auto mb-4">
                <p class="mt-3 text-HunterGreen mb-5 border-top pt-4">Already have an account? <a href="/login">Log in</a></p>
            </div>
        </div>
    </div>
    {% include "components/footer.html.jinja"%}
</body>

</html>