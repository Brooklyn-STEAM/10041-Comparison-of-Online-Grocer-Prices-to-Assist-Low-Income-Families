<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Results for '{{request.args.get('query')}}'</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="icon" href="/static/other_images/CheapCartsLogo.png">
    <link rel="stylesheet" href="/static/styles.css">
  </head>
  <body>
  {% include "components/navbar.html.jinja" %}
    <h1 class="text-center mt-3">Search Results</h1>

    <main class="container">
      <h2>From <a href="/products" class="search-header-link link-underline link-underline-opacity-0">Products</a></h2>
      {%if products | length > 0%}
      <div class="overflow-auto">
        {%for item in products%}
        <div class="search-card card mb-3" style="max-width: 540px;">
        <a href="/compare/{{item['id']}}" class="text-black link-underline link-underline-opacity-0">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="/static/other_images/Temp-Item.png" class="img-fluid rounded-start" alt="">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h3 class="card-title">{{item['item_name']}}</h3>
              </div>
            </div>
          </div>
        </a>
        </div>
        {%endfor%}
        {%elif request.args.get('query') != None%}
          <h1 class="text-center">'{{request.args.get('query')}}' Not Found</h1>
        {%endif%}
      </div>
      <hr class="product-rule">

  
      <h2>From <a href="/leftovers" class="search-header-link link-underline link-underline-opacity-0">Leftovers</a></h2>
      {%if saved_products | length > 0%}
      <div class="overflow-auto">
        {%for item in saved_products%}
        <div class="search-card card mb-3" style="max-width: 540px;">
        <a href="/compare/{{item['id']}}" class="text-black link-underline link-underline-opacity-0">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="/static/other_images/Temp-Item.png" class="img-fluid rounded-start" alt="Image of {{item['item_name']}}">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h3 class="card-title">{{item['item_name']}}</h3>
              </div>
            </div>
          </div>
        </a>
        </div>
        {%endfor%}
        {%elif request.args.get('query') != None%}
          <h1 class="text-center">'{{request.args.get('query')}}' Not Found</h1>
        {%endif%}
      </div>
      <hr class="product-rule">
    </main>




    {% include "components/footer.html.jinja" %}


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>